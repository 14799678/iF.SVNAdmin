<script id="tmpl-UserInfoView" type="text/html">
<div class="UserInfoView">
  <h1><span class="glyphicon glyphicon-user"></span> User Information</h1>
  <div class="roles-wrapper"></div>
  <div class="groups-wrapper"></div>
</div>
</script>

<script id="tmpl-UserInfoView-Groups" type="text/html">
<div class="UserInfoView-Groups">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">{{>~tr("Groups")}}</h1>
    </div>
    <div class="panel-body">

      <div class="table-responsive">
        <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-sm-1"></th>
            <th class="col-sm-1">#</th>
            <th class="col-sm-10">{{>~tr("Name")}}</th>
          </tr>
        </thead>
        <tbody>
          {{for []}}
          <tr>
            <td><input type="checkbox" name="user-selection" data-providerid="{{>~pid}}" data-userid="{{>id}}"></td>
            <td>{{>(#index + 1)}}</td>
            <td>{{>displayname}}</td>
          </tr>
          {{/for}}
        </tbody>
        </table>
      </div>

    </div><!-- /.panel-body -->
  </div><!-- /.panel -->

</div>
</script>
