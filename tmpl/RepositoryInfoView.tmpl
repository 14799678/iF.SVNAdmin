<script id="tmpl-RepositoryInfoView" type="text/html">
  <div class="RepositoryInfoView">
    <p>
      <a role="button" class="btn btn-default repositories-link" href="#!/repositories?providerid={{url:options.providerId}}" data-providerid="{{>options.providerId}}"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <button class="btn btn-default refresh-link"><span class="glyphicon glyphicon-refresh"></span></button>
    </p>
    <div class="basics-wrapper"></div>
    <div class="paths-wrapper"></div>
  </div>
</script>

<script id="tmpl-RepositoryInfoView-Basics" type="text/html">
  <div class="RepositoryInfoView-Basics">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">{{>~tr("Basics")}}</h1>
      </div>
      <div class="panel-body">
        <dl>
          <dt>{{>~tr('Name')}}</dt><dd>{{>response.entry.name}}</dd>
          <dt>{{>~tr('Revision')}}</dt><dd>r{{>response.entry.revision}}</dd>
          <dt>{{>~tr('Author')}}</dt><dd>{{>response.entry.author}}</dd>
          <dt>{{>~tr('Date')}}</dt><dd>{{>response.entry.date}}</dd>
        </dl>
      </div>
    </div>
  </div>
</script>

<script id="tmpl-RepositoryInfoView-PathList" type="text/html">
  <div class="RepositoryInfoView-PathList">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">{{>~tr("Paths")}}</h1>
      </div>
      <div class="panel-body">
        <div class="table-wrapper"></div>
      </div>
      <div class="panel-footer">
        <button class="btn btn-default add-link">{{>~tr("Add")}}</button>
      </div>
    </div>
  </div>
</script>