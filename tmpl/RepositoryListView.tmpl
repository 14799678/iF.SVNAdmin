<script id="tmpl-RepositoryListView" type="text/html">
  <div class="RepositoryListView">
    <h1><span class="glyphicon glyphicon-hdd"></span> {{>~tr("Repositories")}}</h1>
    <div class="providers-wrapper"></div>
    <div class="repositorylist-wrapper"></div>
  </div>
</script>

<script id="tmpl-RepositoryListView-Providers" type="text/html">
  <div class="RepositoryListView-Providers">
    <ul class="nav nav-pills">
      {{for providers ~current=current}}
      <li class="provider" data-providerid="{{>id}}">
        <a class="provider-link" data-providerid="{{>id}}" href="#!/repositories/{{>id}}">{{>id}}</a>
      </li>
      {{/for}}
    </ul>
  </div>
</script>

<script id="tmpl-RepositoryListView-RepositoryList" type="text/html">
  <div class="RepositoryListView-RepositoryList">
    <div class="panel panel-primary panel-actions">
      <div class="panel-body">
        <button class="btn btn-default add-link" data-providerid="{{>providerId}}">{{>~tr("Add")}}</button>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading"></div>
      <div class="panel-body">
        <div class="table-wrapper"></div>
      </div>
    </div>
  </div>
</script>








<script id="tmpl-DEV" type="text/html">
  <ul>
  {{for response.repositories ~providerId=providerId}}
    <li>
      {{>(#index + 1)}} - {{>name}} - {{>displayname}}
      [<a href="#" class="delete-link" data-providerid="{{>~providerId}}" data-repositoryid="{{>id}}">Delete</a>]
      [<a href="#!/repositories/{{>~providerId}}/{{>id}}" class="info-link" data-providerid="{{>~providerId}}" data-repositoryid="{{>id}}">Info</a>]
    </li>
  {{/for}}
  </ul>
</script>